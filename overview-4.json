tion as the link between them.","position":{"start":{"line":15,"column":1},"end":{"line":15,"column":1}},"key":"ieSaJZYtfJ"}],"key":"L8hCN4LPDK"}],"key":"TQCrn4dMaK"}],"key":"xXrFcMZS6c"},"references":{"cite":{"order":[],"data":{}}},"footer":{"navigation":{"prev":{"title":"Next steps","url":"/next-3","group":"Preface"},"next":{"title":"The interpolation problem","url":"/interpolation","group":"Preface"}}},"domain":"http://localhost:3000"}